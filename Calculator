def wish(n):
    if(n==1):
        print(a+b)
    elif(n==2):
        print(a-b)
    elif (n==3):
        print(a*b)
    elif (n==4):
        print(a/b)
    else:
        print("wrong input")

a = float(input("Enter your 1st number\n"))
b = float(input("enter your 2nd number\n"))
n = int(input("enter 1.for sum\n 2.for substact\n 3.for multiply\n 4.for devide\n"))
wish(n)
